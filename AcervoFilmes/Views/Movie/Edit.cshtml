@model AcervoFilmes.Models.Movie
@{
	ViewBag .Title = "Editar Filme";
}


<h1 > Editar Filme</h1 >
<hr / >

@using (Html.BeginForm()) {

    @Html.AntiForgeryToken() 
	<div class="form-horizontal">
    @Html.HiddenFor(m => m.movieId) 
		<div class="form-group"> @Html.LabelFor(m => m.title, new { @class = "control-label col-md-2" }) 
			<div class="col-md-10"> @Html.TextBoxFor(m => m.title, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.title, "", new { @class = "text-danger" }) </div>
		</div>
		<div class="form-group"> @Html.LabelFor(m => m.sinopse, new { @class = "control-label col-md-2" }) 
			<div class="col-md-10"> @Html.TextBoxFor(m => m.sinopse, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.sinopse, "", new { @class = "text-danger" }) </div>
		</div>
		<div class="form-group"> @Html.LabelFor(m => m.duration, htmlAttributes: new { @class = "control-label col-md-2" }) 
			<div class="col-md-10"> @Html.TextBoxFor(m => m.duration, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.duration, "", new { @class = "text-danger" }) </div>
		</div>
        <div class="form-group"> @Html.LabelFor(m => m.direction, htmlAttributes: new { @class = "control-label col-md-2" }) 
			<div class="col-md-10"> @Html.TextBoxFor(m => m.direction, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.direction, "", new { @class = "text-danger" }) </div>
		</div>
        <div class="form-group"> @Html.LabelFor(m => m.typeMidia, htmlAttributes: new { @class = "control-label col-md-2" }) 
			<div class="col-md-10"> @Html.TextBoxFor(m => m.typeMidia, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.typeMidia, "", new { @class = "text-danger" }) </div>
		</div>
      <div class="form-group"> @Html.LabelFor(m => m.elenco, htmlAttributes: new { @class = "control-label col-md-2" }) 
			<div class="col-md-10"> @Html.TextBoxFor(m => m.elenco, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.elenco, "", new { @class = "text-danger" }) </div>
		</div>


		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Salvar alterações" class="btn btn-success" /> @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" }) 
			</div>
		</div>
	</div>
}

