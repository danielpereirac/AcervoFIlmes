 @model IEnumerable<AcervoFilmes.Models.Movie>
    @{
         ViewBag.Title = "Index";
    }
    <h2 class="mt-3">Filmes</h2>
    <p>
        @Html.ActionLink("Incluir Novo Filme","Create","Movie", new { @class = "btn btn-success" })
    </p>

    <input class="form-control" id="myInput" type="text" placeholder="Buscar..">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.title)</th>
                <th>@Html.DisplayNameFor(model => model.duration)</th>
                <th>@Html.DisplayNameFor(model => model.yearMovie)</th>
                <th>@Html.DisplayNameFor(model => model.typeMidia)</th>
                <th>@Html.DisplayNameFor(model => model.direction)</th>

                <th></th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model) {
           
            <tr>
                <td>@Html.DisplayFor(modelItem => item.title)</td>
                <td>@Html.DisplayFor(modelItem => item.duration)</td>
                <td>@Html.DisplayFor(modelItem => item.yearMovie)</td>
                <td>@Html.DisplayFor(modelItem => item.typeMidia)</td>
                <td>@Html.DisplayFor(modelItem => item.direction)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.movieId }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.movieId }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.movieId },new { onclick = "return confirm('Tem certeza que deseja deletar este filme ?');"})
                </td>
            </tr>
            }
        </tbody>
    </table>

    <script>$(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });</script>


